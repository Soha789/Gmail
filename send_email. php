<?php
require_once 'config.php';
requireLogin();

$currentUser = getCurrentUser($pdo);
$success = '';
$error = '';

// Fetch all users except current user
$stmt = $pdo->prepare("SELECT id, username, email FROM users WHERE id != ? ORDER BY username");
$stmt->execute([$currentUser['id']]);
$users = $stmt->fetchAll();

// Handle email sending
if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['send_email'])) {
    $receiverId = $_POST['receiver_id'] ?? '';
    $subject = trim($_POST['subject'] ?? '');
    $body = trim($_POST['body'] ?? '');
    
    if (empty($receiverId)) {
        $error = 'Please select a recipient';
    } elseif (empty($body)) { 
        $error = 'Email body cannot be empty';
    } else {
        try {
            $stmt = $pdo->prepare("INSERT INTO emails (sender_id, receiver_id, subject, body) VALUES (?, ?, ?, ?)");
            $stmt->execute([$currentUser['id'], $receiverId, $subject ?: 'No Subject', $body]);
            $success = 'Email sent successfully!';
            
            // Clear form
            $_POST = [];
        } catch (PDOException $e) {
            $error = 'Failed to send email: ' . $e->getMessage();
        }
    }
}
?>
