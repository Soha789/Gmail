    <script>
        // Enable Ctrl+Enter to send email
        document.getElementById('body').addEventListener('keydown', function(e) {
            if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
                e.preventDefault();
                document.getElementById('emailForm').submit();
            }
        });
        
        // Auto-focus on message body if recipient is selected
        document.getElementById('receiver_id').addEventListener('change', function() {
            if (this.value) {
                document.getElementById('body').focus();
            }
        });
    </script>
